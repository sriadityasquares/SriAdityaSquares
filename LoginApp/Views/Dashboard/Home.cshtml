
@{
    ViewBag.Dashboard = "active";
    ViewBag.Statistics = "active";
    ViewBag.Title = "Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="~/Scripts/Dashboard/material-dashboard.css?v=2.1.2" rel="stylesheet" />
    <link href="~/Scripts/Dashboard/demo.css" rel="stylesheet" />

    <script src="~/Scripts/Dashboard/bootstrap-material-design.min.js"></script>
</head>
<div class="jumbotron">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card card-stats">
                        <div class="card-header card-header-warning card-header-icon">
                            <div class="card-icon">
                                @*<i class="material-icons">content_copy</i>*@
                                <i class="fa fa-building"></i>
                            </div>
                            <p style="font-weight:bold !important" class="card-category"><b>PROJECTS</b></p>
                            <h3 class="card-title">
                                @ViewBag.Projects
                            </h3>
                        </div>
                        <div class="card-footer">

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card card-stats">
                        <div class="card-header card-header-success card-header-icon">
                            <div class="card-icon">
                                <i class="fa fa-ticket"></i>
                            </div>
                            <p style="font-weight:bold !important" class="card-category"><b>BOOKINGS</b></p>
                            <h3 class="card-title">@ViewBag.Bookings</h3>
                        </div>
                        <div class="card-footer">

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card card-stats">
                        <div class="card-header card-header-danger card-header-icon">
                            <div class="card-icon">
                                <i class="fa fa-map"></i>
                            </div>
                            <p style="font-weight:bold !important" class="card-category"><b>LOCATIONS</b></p>
                            <h3 class="card-title">@ViewBag.Locations</h3>
                        </div>
                        <div class="card-footer">

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card card-stats">
                        <div class="card-header card-header-info card-header-icon">
                            <div class="card-icon">
                                <i class="fa fa-id-card"></i>
                            </div>
                            <p style="font-weight:bold !important" class="card-category"><b>IBO</b></p>
                            <h3 class="card-title">@ViewBag.IBOCount</h3>
                        </div>
                        <div class="card-footer">

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="card card-chart">
                        <div class="card-header card-header-success">
                            <div class="ct-chart" id="dailySalesChart"></div>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">Daily Sales</h3>
                            <p class="card-category">
                                @if (!ViewBag.isBookingGrowth)
                                {
                                    <span style="font-size:14px" class="text-danger"><i class="fa fa-long-arrow-down"></i> @ViewBag.BookingGrowth % </span><span style="font-size:14px">decrease in daily sales.</span>
                                }
                                else
                                {
                                    <span style="font-size:14px" class="text-success"><i class="fa fa-long-arrow-up"></i> @ViewBag.BookingGrowth % </span><span style="font-size:14px">increase in daily sales.</span>

                                }
                            </p>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="fa fa-ticket"><b> New Bookings added today : @ViewBag.TodayBooking</b></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-chart">
                        <div class="card-header card-header-warning">
                            <div class="ct-chart" id="websiteViewsChart"></div>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">Payments Received</h3>
                            <p class="card-category">
                                @if (!ViewBag.isPaymentGrowth)
                                {
                                    <span style="font-size:14px" class="text-danger"><i class="fa fa-long-arrow-down"></i> @ViewBag.PaymentGrowth % </span><span style="font-size:14px">decrease in payments today.</span>
                                }
                                else
                                {
                                    <span style="font-size:14px" class="text-success"><i class="fa fa-long-arrow-up"></i> @ViewBag.PaymentGrowth % </span><span style="font-size:14px">increase in payments today.</span>

                                }
                            </p>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="fa fa-dollar"><b> New Payments added today : @ViewBag.TodayPaymentCount</b></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-chart">
                        <div class="card-header card-header-danger">
                            <div class="ct-chart" id="completedTasksChart"></div>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">New Customers</h3>
                            <p class="card-category">
                                @if (!ViewBag.isCustomerGrowth)
                                {
                                    <span style="font-size:14px" class="text-danger"><i class="fa fa-long-arrow-down"></i> @ViewBag.CustomerGrowth % </span><span style="font-size:14px">decrease in customers today.</span>
                                }
                                else
                                {
                                    <span style="font-size:14px" class="text-success"><i class="fa fa-long-arrow-up"></i> @ViewBag.CustomerGrowth % </span><span style="font-size:14px">increase in customers today.</span>
                                }
                            </p>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="fa fa-users"><b> New Customers added today : @ViewBag.TodayCustomerCount</b></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-info">
                            <h4 class="card-title"><b style="font-size:14px;font-weight:bolder">PAYMENTS DUE IN 5 DAYS</b></h4>
                            <p class="card-category">Last Updated @DateTime.Now</p>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover">
                                <thead class="text-info">
                                <th>PROJECT</th>
                                <th>TOWER</th>
                                <th>FLAT</th>
                                <th>CUSTOMER</th>
                                <th>IBO</th>
                                </thead>
                                <tbody>
                                    @if (ViewBag.PaymentDuesCount > 0)
                                    {
                                        foreach (var item in ViewBag.PaymentDues)
                                        {
                                            <tr>
                                                <td>
                                                    @item.ProjectName
                                                </td>
                                                <td>
                                                    @item.TowerName
                                                </td>
                                                <td>
                                                    @item.FlatName
                                                </td>
                                                <td>
                                                    @item.CustomerName
                                                </td>
                                                <td>
                                                    @item.AgentName
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                No Payment Dues in 5 days
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-warning">
                            <h4 class="card-title"><b style="font-size:14px;font-weight:bolder">TOP 5 IBO IN LAST 30 DAYS</b></h4>
                            <p class="card-category">Last Updated @DateTime.Now</p>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover">
                                <thead class="text-warning">
                                <th>ID</th>
                                <th>NAME</th>
                                <th>BOOKINGS</th>

                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.TopIBO)
                                    {
                                        <tr>
                                            <td>
                                                @item.AgentID
                                            </td>
                                            <td>
                                                @item.AgentName
                                            </td>
                                            <td>
                                                @item.BookingsCount
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    tr td {
        font-weight: bold !important;
        font-size: 12px !important;
    }

    th {
        font-weight: bold !important;
        font-size: 12px !important;
    }
</style>