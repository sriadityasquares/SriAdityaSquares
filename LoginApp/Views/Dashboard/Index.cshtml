        @Html.LabelFor(m => m.Tower, new { @class = "col-md-2" })
        @Html.DropDownListFor(model => model.Tower, new SelectList(" "), "--Select Tower--", new { @class = "textbox-control col-md-3 col-xs" })
    </div>
